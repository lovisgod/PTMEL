<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26c4ff"
    tools:context="com.example.ayooluwa.ptmel.MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="242dp"
        android:src="@drawable/map"
        android:id="@+id/imageView"
        tools:ignore="ContentDescription" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/app_drawer2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/ptmel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#2196F3"
            android:text="PTMEL INTERNATIONAL"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ptmel"
            android:layout_centerHorizontal="true"
            android:background="#fee04d"
            android:text="largest Geospatial Firm In Nigeria"
            android:textColor="#482213"
            android:textSize="24sp"
            android:id="@+id/textView"
            tools:ignore="HardcodedText" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_centerInParent="true"
            android:padding="90dp"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/location"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/location"
        android:layout_centerVertical="true"
        android:layout_below="@id/relativeLayout"
        android:layout_margin="10dp"
        tools:ignore="ContentDescription" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/call"
        android:layout_centerVertical="true"
        android:layout_below="@id/location"
        android:layout_margin="10dp"
        android:id="@+id/call"
        tools:ignore="ContentDescription" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/email"
        android:id="@+id/email"
        android:layout_centerVertical="true"
        android:layout_below="@id/call"
        android:layout_margin="10dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H34, EWET HOUSING, UYO, AKWA IBOM STATE, NIGERIA."
        android:textColor="#08274b"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_below="@id/relativeLayout"
        android:layout_toRightOf="@id/location"
        android:layout_margin="10dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08165656988"
        android:textColor="#08274b"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_below="@id/location"
        android:layout_toRightOf="@id/call"
        android:layout_margin="10dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RtlHardcoded" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ptmelgeospatial@gmail.com"
        android:textColor="#08274b"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_below="@id/call"
        android:layout_toRightOf="@id/email"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/email"/>
</RelativeLayout>
